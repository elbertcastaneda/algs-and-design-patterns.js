{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",

    "baseUrl": "./src",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["jest", "node"],
    "noEmit": true,
    "allowJs": true
  },
  "include": ["src/", ".eslintrc.cjs", "./jest.config.ts", "scripts/"],
  "exclude": ["node_modules"]
}
